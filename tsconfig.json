{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "jsx": "react",
    "types": ["react", "react-dom"],
    "lib": ["dom", "esnext"],
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "moduleResolution": "bundler",
    "paths": {
      "lib": ["./lib/index.ts"],
      "icons": ["./icons/index.tsx"],
      "types": ["./types/index.ts"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
